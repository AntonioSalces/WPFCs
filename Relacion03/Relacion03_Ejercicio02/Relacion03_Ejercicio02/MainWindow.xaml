<Window x:Class="Relacion03_Ejercicio02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Relacion03_Ejercicio02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBox Name="textBoxPrincipal"
                 Height="60"
                 Margin="0,0,0,10"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 SelectionChanged="textBoxPrincipal_TextChanged" TextChanged="textBoxPrincipal_TextChanged" />
        <TextBox Name="textBoxSeleccion"
                 IsReadOnly="True"
                 Height="30"
                 Background="#FFECECEC"
                 Text="Has seleccionado " />
    </StackPanel>
</Window>
