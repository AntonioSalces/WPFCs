<Window x:Class="Relacion03_Ejercicio04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Relacion03_Ejercicio04"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBox Name="nombreTextBox"
                 Height="35"
                 Margin="0,0,0,18"
                 FontSize="16"
                 VerticalContentAlignment="Center" />
        <Button Name="saludarButton"
                Height="40"
                Padding="10"
                FontSize="16"
                Click="saludarButton_Click">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="😁" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Saludar" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
