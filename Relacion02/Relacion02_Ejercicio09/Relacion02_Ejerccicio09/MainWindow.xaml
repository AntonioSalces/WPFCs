<Window x:Class="Relacion02_Ejerccicio09.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Relacion02_Ejerccicio09"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label>
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/betis.ico" Width="32" Height="32" Margin="0,0,8,0"/>
                    <TextBlock Text="Información de contacto (Betis)" 
                               FontWeight="Bold" FontSize="16" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="¡Contactar con el Betis!" Margin="0,10,0,0" Click="ContactoBetis_Click"/>
            </StackPanel>
        </Label>
    </Grid>
</Window>
